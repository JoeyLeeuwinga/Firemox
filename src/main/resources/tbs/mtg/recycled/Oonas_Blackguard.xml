<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Oona's Blackguard">
<rules-author-comment>riclas</rules-author-comment>

<!--
		1b
	creature - faerie rogue
	1/1
	flying
	each other rogue creature you control comes into play with an additional +1/+1 counter on it.
	whenever a creature you control with a +1/+1 counter on it deals combat damage to a player, that player discards a card.
 -->

	<init>
		<registers>
			<register index='black' value='1'/>
			<register index='colorless' value='1'/>
			<register index='power' value='1'/>
			<register index='toughness' value='1'/>
		</registers>
		<colors>black </colors>
		<idcards>creature </idcards>
		<properties>faerie rogue flying </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<replacement-ability zone="play">
			<moved-card>
				<source-test>
					<and>
						<has-property property="warrior"/>
						<has-idcard idcard="creature"/>
						<not>
							<is-this/>
						</not>
						<controller player="you"/>
						<not>
							<in-zone zone="play" />
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone="play" />
				</destination-test>
			</moved-card>
			<effects>
				<target type="context.card" />
				<action ref="move-to-play"/>
				<add-object object-name="+1/+1"/>
				<unregister-this />
			</effects>
		</replacement-ability>
		<triggered-ability zone='play'>
			<assigned-damage type='damage-combat'>
				<source-test>
					<and>
						<controller player="you"/>
						<sup right="0">
							<left>
								<counter object-name="+1/+1" card="tested" />
							</left>
						</sup>
					</and>
				</source-test>
				<destination-test>
					<is-player/>
				</destination-test>
			</assigned-damage>
			<effects>
				<target type="context.player"/>
				<action ref='player-discard' value='1'/>
			</effects>
		</triggered-ability>
	</abilities>
</card>
