<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Mutavault">
<rules-author-comment>riclas</rules-author-comment>

<!--
		land
	t :add 1 to your mana pool.
	1: mutavault becomes a 2/2 creature with all creature types until end of turn. it's still a land.
 -->

	<init>
		<registers>
		</registers>
		<idcards>land </idcards>
	</init>
	<abilities>
		<ability ref='cast-land'/>
		<ability ref="tap-add-C"/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana colorless='1' />
			</cost>
			<effects>
				<target type="this"/>
				<add-modifier>
					<register-indirection index="power" value="2" operation="set" linked="false">
				 		<until>
				 			<end-of-phase phase="cleanup"/>
				 		</until>
				 	</register-indirection>
					<register-indirection index="toughness" value="2" operation="set" linked="false">
				 		<until>
				 			<end-of-phase phase="cleanup"/>
				 		</until>
				 	</register-indirection>
					<idcard-modifier idcard="creature" operation="or" linked="false">
				 		<until>
				 			<end-of-phase phase="cleanup"/>
				 		</until>
				 	</idcard-modifier>
					<property-modifier property="changeling" linked="false">
				 		<until>
				 			<end-of-phase phase="cleanup"/>
				 		</until>
				 	</property-modifier>
				</add-modifier>
			</effects>
		</activated-ability>
	</abilities>
</card>
