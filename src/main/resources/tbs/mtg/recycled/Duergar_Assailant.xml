<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Duergar Assailant">
<rules-author-comment>riclas</rules-author-comment>

<!--
		(r / w)
	creature - dwarf soldier
	1/1
	sacrifice duergar assailant: duergar assailant deals 1 damage to target attacking or blocking creature.
 -->

	<init>
		<registers>
			<register index='colorless' value='1'/>
			<register index='power' value='1'/>
			<register index='toughness' value='1'/>
		</registers>
		<colors>white red </colors>
		<idcards>creature </idcards>
		<properties>dwarf soldier </properties>
	</init>
	<abilities>
		<activated-ability playable='this' zone='hand'>
			<cost>
				<pay-mana red='1' />
			</cost>
			<effects>
				<action ref='put-in-play' />
			</effects>
		</activated-ability>
		<activated-ability playable='this' zone='hand'>
			<cost>
				<pay-mana white='1'/>
			</cost>
			<effects>
				<action ref='put-in-play' />
			</effects>
		</activated-ability>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<action ref='sacrifice-this'/>
				<action ref='target-creature'>
					<test>
						<or>
							<test ref='tested-is-attacking'/>
							<test ref='tested-is-blocking'/>
						</or>
					</test>
				</action>
			</cost>
			<effects>
				<assign-damage value='1' type='damage-normal'/>
			</effects>
		</activated-ability>
	</abilities>
</card>
