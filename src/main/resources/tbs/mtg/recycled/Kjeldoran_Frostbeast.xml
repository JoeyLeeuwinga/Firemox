<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Kjeldoran Frostbeast">
<rules-author-comment>riclas</rules-author-comment>

<!--
		3gw
	creature - elemental beast
	2/4
	whenever kjeldoran frostbeast blocks or becomes blocked by a creature, destroy that creature at end of combat.
 -->

	<init>
		<registers>
			<register index='white' value='1'/>
			<register index='green' value='1'/>
			<register index='colorless' value='3'/>
			<register index='power' value='2'/>
			<register index='toughness' value='4'/>
		</registers>
		<colors>white green </colors>
		<idcards>creature </idcards>
		<properties>elemental beast </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone="play">
			<declared-blocking>
				<blocking-test>
					<is-this/>
				</blocking-test>
			</declared-blocking>
			<effects>
				<target type="context.card2"/>
				<action ref="destroy-target-eoc"/>
			</effects>
		</triggered-ability>

		<triggered-ability zone="play">
			<declared-blocking>
				<attacking-test>
					<is-this/>
				</attacking-test>
			</declared-blocking>
			<effects>
				<target type="context.card"/>
				<action ref="destroy-target-eoc"/>
			</effects>
		</triggered-ability>
	</abilities>
</card>
