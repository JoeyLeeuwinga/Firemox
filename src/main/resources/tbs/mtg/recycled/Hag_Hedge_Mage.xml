<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Hag Hedge-Mage">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2(b / g)
	creature - hag shaman
	2/2
	when hag hedge-mage comes into play, if you control two or more swamps, you may have target player discard a card.
	when hag hedge-mage comes into play, if you control two or more forests, you may put target card in your graveyard on top of your library.
 -->

	<init>
		<registers>
			<register index='colorless' value='3'/>
			<register index='power' value='2'/>
			<register index='toughness' value='2'/>
		</registers>
		<colors>green black </colors>
		<idcards>creature </idcards>
		<properties>hag shaman </properties>
	</init>
	<abilities>
		<activated-ability playable='this' zone='hand'>
			<cost>
				<pay-mana colorless='2' black='1' />
			</cost>
			<effects>
				<action ref='put-in-play' />
			</effects>
		</activated-ability>
		<activated-ability playable='this' zone='hand'>
			<cost>
				<pay-mana colorless='2' green='1'/>
			</cost>
			<effects>
				<action ref='put-in-play' />
			</effects>
		</activated-ability>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<not>
							<in-zone zone='play' card='tested'/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<and>
						<sup right="1">
							<left>
								<counter restriction-zone="play">
									<and>
										<controller player="you"/>
										<has-idcard idcard="swamp"/>
									</and>
								</counter>
							</left>
						</sup>
						<in-zone zone='play' card='tested'/>
					</and>
				</destination-test>
			</moved-card>
			<cost>
				<action ref='target-player'/>
			</cost>
			<effects>
				<action ref='player-discard' value='1'/>
			</effects>
		</triggered-ability>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<not>
							<in-zone zone='play' card='tested'/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<and>
						<sup right="1">
							<left>
								<counter restriction-zone="play">
									<and>
										<controller player="you"/>
										<has-idcard idcard="forest"/>
									</and>
								</counter>
							</left>
						</sup>
						<in-zone zone='play' card='tested'/>
					</and>
				</destination-test>
			</moved-card>
			<cost>
				<target type="card" mode="choose" restriction-zone="graveyard">
					<test>
						<controller player="you"/>
					</test>
				</target>
			</cost>
			<effects>
				<action ref="move-library-top"/>
			</effects>
		</triggered-ability>
	</abilities>
</card>
