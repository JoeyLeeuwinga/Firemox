<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Marsh Viper">
<rules-author-comment>riclas</rules-author-comment>

<!--
		3g
	creature - snake
	1/2
	whenever marsh viper deals damage to an opponent, that player gets two poison counters. 
 -->

	<init>
		<registers>
			<register index='green' value='1'/>
			<register index='colorless' value='3'/>
			<register index='power' value='1'/>
			<register index='toughness' value='2'/>
		</registers>
		<colors>green </colors>
		<idcards>creature </idcards>
		<properties>snake </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<assigned-damage type='damage-any'>
				<source-test>
					<is-this/>
				</source-test>
				<destination-test>
					<is-player target="opponent"/>
				</destination-test>
			</assigned-damage>
			<effects>
				<modify-register register='opponent' index='poison' operation='add' value='2'/>
			</effects>
		</triggered-ability>
	</abilities>
</card>
