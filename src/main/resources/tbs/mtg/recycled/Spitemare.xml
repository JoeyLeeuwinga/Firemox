<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Spitemare">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2(r / w)(r / w)
	creature - elemental
	3/3
	whenever spitemare is dealt damage, it deals that much damage to target creature or player.
 -->

	<init>
		<registers>
			<register index='colorless' value='4'/>
			<register index='power' value='3'/>
			<register index='toughness' value='3'/>
		</registers>
		<colors>white red </colors>
		<idcards>creature </idcards>
		<properties>elemental </properties>
	</init>
	<abilities>
		<activated-ability playable='this' zone='hand'>
			<cost>
				<pay-mana colorless='2' red='2' />
			</cost>
			<effects>
				<action ref='put-in-play' />
			</effects>
		</activated-ability>
		<activated-ability playable='this' zone='hand'>
			<cost>
				<pay-mana colorless='2' red='1' white='1'/>
			</cost>
			<effects>
				<action ref='put-in-play' />
			</effects>
		</activated-ability>
		<activated-ability playable='this' zone='hand'>
			<cost>
				<pay-mana colorless='2' white='2'/>
			</cost>
			<effects>
				<action ref='put-in-play' />
			</effects>
		</activated-ability>
		<triggered-ability zone='play'>
			<assigned-damage type="damage-any">
				<destination-test>
					<is-this />
				</destination-test>
			</assigned-damage>
			<cost>
				<action ref='target-dealtable'/>
			</cost>
			<effects>
				<assign-damage type='damage-normal' value="context.int"/>
			</effects>
		</triggered-ability>
	</abilities>
</card>
