<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Noggle Hedge-Mage">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2(u / r)
	creature - noggle wizard
	2/2
	when noggle hedge-mage comes into play, if you control two or more islands, you may tap two target permanents.
	when noggle hedge-mage comes into play, if you control two or more mountains, you may have noggle hedge-mage deal 2 damage to target player.
 -->

	<init>
		<registers>
			<register index='colorless' value='3'/>
			<register index='power' value='2'/>
			<register index='toughness' value='2'/>
		</registers>
		<colors>red blue </colors>
		<idcards>creature </idcards>
		<properties>noggle wizard </properties>
	</init>
	<abilities>
		<activated-ability playable='this' zone='hand'>
			<cost>
				<pay-mana colorless='2' blue='1' />
			</cost>
			<effects>
				<action ref='put-in-play' />
			</effects>
		</activated-ability>
		<activated-ability playable='this' zone='hand'>
			<cost>
				<pay-mana colorless='2' red='1'/>
			</cost>
			<effects>
				<action ref='put-in-play' />
			</effects>
		</activated-ability>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<not>
							<in-zone zone='play' card='tested'/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<and>
						<sup right="1">
							<left>
								<counter restriction-zone="play">
									<and>
										<controller player="you"/>
										<has-idcard idcard="island"/>
									</and>
								</counter>
							</left>
						</sup>
						<in-zone zone='play' card='tested'/>
					</and>
				</destination-test>
			</moved-card>
			<cost>
				<repeat value="2"/>
				<action ref='target-permanent'/>
			</cost>
			<effects>
				<choice controller="you" cancel="true">
					<either>
						<tap/>
					</either>
				</choice>
			</effects>
		</triggered-ability>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<not>
							<in-zone zone='play' card='tested'/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<and>
						<sup right="1">
							<left>
								<counter restriction-zone="play">
									<and>
										<controller player="you"/>
										<has-idcard idcard="mountain"/>
									</and>
								</counter>
							</left>
						</sup>
						<in-zone zone='play' card='tested'/>
					</and>
				</destination-test>
			</moved-card>
			<cost>
				<action ref='target-player'/>
			</cost>
			<effects>
				<choice controller="you" cancel="true">
					<either>
						<assign-damage value="2" type="damage-normal"/>
					</either>
				</choice>
			</effects>
		</triggered-ability>
	</abilities>
</card>
