<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Opaline Sliver">
<rules-author-comment>riclas</rules-author-comment>

<!--
		1wu
	creature - sliver
	2/2
	all slivers have "whenever this permanent becomes the target of a spell an opponent controls, you may draw a card."
 -->

	<init>
		<registers>
			<register index='white' value='1'/>
			<register index='blue' value='1'/>
			<register index='colorless' value='1'/>
			<register index='power' value='2'/>
			<register index='toughness' value='2'/>
		</registers>
		<colors>white blue </colors>
		<idcards>creature </idcards>
		<properties>sliver </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
	</abilities>
	<modifiers>
		<static-modifier filter-zone="play">
			<modifiers>
				<ability-modifier linked="true" layer="global">
					<abilities>
						<triggered-ability zone='play'>
							<targeted>
								<source-test>
									<and>
										<is-spell/>
										<controller player="opponent"/>
									</and>
								</source-test>
								<destination-test>
									<is-this />
								</destination-test>
							</targeted>
							<effects>
								<choice controller="you" cancel="true">
									<either>
										<target type='you'/>
										<action ref='draw-a-card'/>
									</either>
								</choice>
							</effects>
						</triggered-ability>
					</abilities>
				</ability-modifier>
			</modifiers>
			<while>
			 	<has-property property="sliver"/>
			</while>
		</static-modifier>
	</modifiers>
</card>
