<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Peregrine Drake">
<rules-author-comment>riclas</rules-author-comment>

<!--
		4u
	creature - drake
	2/3
	flying
	when peregrine drake comes into play, untap up to five lands.
 -->

	<init>
		<registers>
			<register index='blue' value='1'/>
			<register index='colorless' value='4'/>
			<register index='power' value='2'/>
			<register index='toughness' value='3'/>
		</registers>
		<colors>blue </colors>
		<idcards>creature </idcards>
		<properties>drake flying </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<not>
							<in-zone zone='play' card='tested'/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='play' card='tested'/>
				</destination-test>
			</moved-card>
			<effects>
				<repeat value="5"/>
				<target type="card" mode="choose" restriction-zone="play" hop="1" cancel="true">
					<test ref="is-targetable-land" />
				</target>
				<untap/>
			</effects>
		</triggered-ability>
	</abilities>
</card>
