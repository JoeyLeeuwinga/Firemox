<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Labyrinth Minotaur">
<rules-author-comment>riclas</rules-author-comment>

<!--
		3u
	creature - minotaur
	1/4
	whenever labyrinth minotaur blocks a creature, that creature doesn't untap during its controller's next untap step.
 -->

	<init>
		<registers>
			<register index='blue' value='1'/>
			<register index='colorless' value='3'/>
			<register index='power' value='1'/>
			<register index='toughness' value='4'/>
		</registers>
		<colors>blue </colors>
		<idcards>creature </idcards>
		<properties>minotaur </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<declared-blocking>
				<attacking-test>
					<is-this/>
				</attacking-test>
			</declared-blocking>
			<effects>
				<target type="context.card"/>
				<action ref="does-not-untap-next-untap"/>
			</effects>
		</triggered-ability>
	</abilities>
</card>
