<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Patrol Signaler">
<rules-author-comment>riclas</rules-author-comment>

<!--
		1w
	creature - kithkin soldier
	1/1
	1w, oq: put a 1/1 white kithkin soldier creature token into play. (oq is the untap symbol.)
 -->

	<init>
		<registers>
			<register index='white' value='1'/>
			<register index='colorless' value='1'/>
			<register index='power' value='1'/>
			<register index='toughness' value='1'/>
		</registers>
		<colors>white </colors>
		<idcards>creature </idcards>
		<properties>kithkin soldier </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana white='1' colorless='1' />
				<action ref='Q'/>
			</cost>
			<effects>
				<create-card>
					<card name='Kithkin'>
						<rules-author-comment></rules-author-comment>
						<init>
							<registers>
								<register index='power' value='1'/>
								<register index='toughness' value='1'/>
							</registers>
							<colors>white</colors>
							<idcards>creature</idcards>
							<properties>token kithkin soldier</properties>
						</init>
					</card>
				</create-card>
				<move-card controller='you' destination='play'/>
			</effects>
		</activated-ability>
	</abilities>
</card>
