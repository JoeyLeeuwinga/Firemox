<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Noggle Ransacker">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2(u / r)
	creature - noggle rogue
	2/1
	when noggle ransacker comes into play, each player draws two cards, then discards a card at random.
 -->

	<init>
		<registers>
			<register index='colorless' value='3'/>
			<register index='power' value='2'/>
			<register index='toughness' value='1'/>
		</registers>
		<colors>red blue </colors>
		<idcards>creature </idcards>
		<properties>noggle rogue </properties>
	</init>
	<abilities>
		<activated-ability playable='this' zone='hand'>
			<cost>
				<pay-mana colorless='2' blue='1' />
			</cost>
			<effects>
				<action ref='put-in-play' />
			</effects>
		</activated-ability>
		<activated-ability playable='this' zone='hand'>
			<cost>
				<pay-mana colorless='2' red='1'/>
			</cost>
			<effects>
				<action ref='put-in-play' />
			</effects>
		</activated-ability>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<not>
							<in-zone zone='play' card='tested'/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='play' card='tested'/>
				</destination-test>
			</moved-card>
			<effects>
				<target type="player" mode="all"/>
				<repeat value='2'/>
				<action ref='draw-a-card'/>
				<action ref='discard' value='1'/>
				<action ref='opponent-discards' value='1'/>
			</effects>
		</triggered-ability>
	</abilities>
</card>
