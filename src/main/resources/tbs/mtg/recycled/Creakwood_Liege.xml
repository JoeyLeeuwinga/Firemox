<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Creakwood Liege">
<rules-author-comment>riclas</rules-author-comment>

<!--
		1(b / g)(b / g)(b / g)
	creature - horror
	2/2
	other black creatures you control get +1/+1.
	other green creatures you control get +1/+1.
	at the beginning of your upkeep, you may put a 1/1 black and green worm creature token into play.
 -->

	<init>
		<registers>
			<register index='colorless' value='4'/>
			<register index='power' value='2'/>
			<register index='toughness' value='2'/>
		</registers>
		<colors>green black </colors>
		<idcards>creature </idcards>
		<properties>horror </properties>
	</init>
	<abilities>
		<activated-ability playable='this' zone='hand'>
			<cost>
				<pay-mana colorless='1' black='3' />
			</cost>
			<effects>
				<action ref='put-in-play' />
			</effects>
		</activated-ability>
		<activated-ability playable='this' zone='hand'>
			<cost>
				<pay-mana colorless='1' black='2' green='1'/>
			</cost>
			<effects>
				<action ref='put-in-play' />
			</effects>
		</activated-ability>
		<activated-ability playable='this' zone='hand'>
			<cost>
				<pay-mana colorless='1' black='1' green='2'/>
			</cost>
			<effects>
				<action ref='put-in-play' />
			</effects>
		</activated-ability>
		<activated-ability playable='this' zone='hand'>
			<cost>
				<pay-mana colorless='1' green='3'/>
			</cost>
			<effects>
				<action ref='put-in-play' />
			</effects>
		</activated-ability>
		<triggered-ability resolution='normal' zone='play'>
			<beginning-of-phase phase='upkeep'>
				<test ref='during-your-upkeep'/>
			</beginning-of-phase>
			<effects>
				<create-card>
					<card name='Worm'>
						<rules-author-comment></rules-author-comment>
						<init>
							<registers>
								<register index='power' value='1'/>
								<register index='toughness' value='1'/>
							</registers>
							<colors>black green</colors>
							<idcards>creature</idcards>
							<properties>token worm </properties>
						</init>
					</card>
				</create-card>
				<move-card controller='you' destination='play'/>
			</effects>
		</triggered-ability>
	</abilities>
	<modifiers>
		<static-modifier filter-zone="play">
			<modifiers>
			 	<register-modifier index="power" operation="add" value="1" linked="true" layer="global"/>			 		
			 	<register-modifier index="toughness" operation="add" value="1" linked="true" layer="global"/>
			</modifiers>
			<while>
		 		<and>
		 			<not>
		 				<is-this/>
		 			</not>
		 			<controller player="you"/>
		 			<has-color color="black"/>
			 		<has-idcard idcard="creature"/>
		 		</and>
			</while>
		</static-modifier>
		<static-modifier filter-zone="play">
			<modifiers>
			 	<register-modifier index="power" operation="add" value="1" linked="true" layer="global"/>			 		
			 	<register-modifier index="toughness" operation="add" value="1" linked="true" layer="global"/>
			</modifiers>
			<while>
		 		<and>
		 			<not>
		 				<is-this/>
		 			</not>
		 			<controller player="you"/>
		 			<has-color color="green"/>
			 		<has-idcard idcard="creature"/>
		 		</and>
			</while>
		</static-modifier>
	</modifiers>
</card>
