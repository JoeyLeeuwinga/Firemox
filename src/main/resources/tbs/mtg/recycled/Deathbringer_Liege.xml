<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Deathbringer Liege">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2(w / b)(w / b)(w / b)
	creature - horror
	3/4
	other white creatures you control get +1/+1.
	other black creatures you control get +1/+1.
	whenever you play a white spell, you may tap target creature.
	whenever you play a black spell, you may destroy target creature if it's tapped.
 -->

	<init>
		<registers>
			<register index='colorless' value='5'/>
			<register index='power' value='3'/>
			<register index='toughness' value='4'/>
		</registers>
		<colors>white black </colors>
		<idcards>creature </idcards>
		<properties>horror </properties>
	</init>
	<abilities>
		<activated-ability playable='this' zone='hand'>
			<cost>
				<pay-mana colorless='2' black='3' />
			</cost>
			<effects>
				<action ref='put-in-play' />
			</effects>
		</activated-ability>
		<activated-ability playable='this' zone='hand'>
			<cost>
				<pay-mana colorless='2' black='2' white='1'/>
			</cost>
			<effects>
				<action ref='put-in-play' />
			</effects>
		</activated-ability>
		<activated-ability playable='this' zone='hand'>
			<cost>
				<pay-mana colorless='2' black='1' white='2'/>
			</cost>
			<effects>
				<action ref='put-in-play' />
			</effects>
		</activated-ability>
		<activated-ability playable='this' zone='hand'>
			<cost>
				<pay-mana colorless='2' white='3'/>
			</cost>
			<effects>
				<action ref='put-in-play' />
			</effects>
		</activated-ability>
		<triggered-ability zone='play'>
			<casting>	
				<test>
					<and>
						<has-color color="white"/>
						<controller player="you"/>
					</and>
				</test>
			</casting>
			<cost>
				<action ref='target-creature'/>
			</cost>
			<effects>
				<choice controller="you" cancel="true">
					<either>
						<tap/>
					</either>
				</choice>
			</effects>
		</triggered-ability>
		<triggered-ability zone='play'>
			<casting>	
				<test>
					<and>
						<has-color color="black"/>
						<controller player="you"/>
					</and>
				</test>
			</casting>
			<cost>
				<action ref='target-creature'/>
			</cost>
			<effects>
				<if-then-hop elsehop="2">
					<test>
						<in-zone zone="playANDtapped" card="target-list.first"/>
					</test>
				</if-then-hop>
				<choice controller="you" cancel="true">
					<either>
						<action ref='destroy'/>
					</either>
				</choice>
			</effects>
		</triggered-ability>
	</abilities>
	<modifiers>
		<static-modifier filter-zone="play">
			<modifiers>
			 	<register-modifier index="power" operation="add" value="1" linked="true" layer="global"/>			 		
			 	<register-modifier index="toughness" operation="add" value="1" linked="true" layer="global"/>
			</modifiers>
			<while>
		 		<and>
		 			<not>
		 				<is-this/>
		 			</not>
		 			<controller player="you"/>
		 			<has-color color="black"/>
			 		<has-idcard idcard="creature"/>
		 		</and>
			</while>
		</static-modifier>
		<static-modifier filter-zone="play">
			<modifiers>
			 	<register-modifier index="power" operation="add" value="1" linked="true" layer="global"/>			 		
			 	<register-modifier index="toughness" operation="add" value="1" linked="true" layer="global"/>
			</modifiers>
			<while>
		 		<and>
		 			<not>
		 				<is-this/>
		 			</not>
		 			<controller player="you"/>
		 			<has-color color="white"/>
			 		<has-idcard idcard="creature"/>
		 		</and>
			</while>
		</static-modifier>
	</modifiers>
</card>
