<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Wickerbough Elder">
<rules-author-comment>riclas</rules-author-comment>

<!--
		3g
	creature - treefolk shaman
	4/4
	wickerbough elder comes into play with a -1/-1 counter on it.
	g, remove a -1/-1 counter from wickerbough elder: destroy target artifact or enchantment.
 -->

	<init>
		<registers>
			<register index='green' value='1'/>
			<register index='colorless' value='3'/>
			<register index='power' value='4'/>
			<register index='toughness' value='4'/>
		</registers>
		<colors>green </colors>
		<idcards>creature </idcards>
		<properties>treefolk shaman </properties>
	</init>
	<modifiers>
		<object name="-1/-1"/>
	</modifiers>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana green='1' />
				<target type="this"/>
				<remove-object object-name="-1/-1"/>
				<target-list operation="clear"/>
				<action ref='target-permanent'>
					<test>
						<or>
							<has-idcard idcard="artifact"/>
							<has-idcard idcard="enchantment"/>
						</or>
					</test>
				</action>
			</cost>
			<effects>
				<action ref='destroy'/>
			</effects>
		</activated-ability>
	</abilities>
</card>
