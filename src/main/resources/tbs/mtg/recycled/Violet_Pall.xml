<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Violet Pall">
<rules-author-comment>riclas</rules-author-comment>

<!--
		4b
	tribal instant - faerie
	destroy target nonblack creature. put a 1/1 black faerie rogue creature token with flying into play.
 -->

	<init>
		<registers>
			<register index='black' value='1'/>
			<register index='colorless' value='4'/>
		</registers>
		<colors>black </colors>
		<idcards>tribal instant </idcards>
		<properties>faerie </properties>
	</init>
	<abilities>
		<activated-ability playable='this' name='' zone='hand'>
			<cost>
				<pay-mana value='manacost'/>
				<action ref='target-creature'>
					<test>
						<not>
							<has-color color="black"/>
						</not>
					</test>
				</action>
			</cost>
			<effects>
				<action ref='destroy'/>
				<target-list operation="clear"/>
				<create-card>
					<card name='Faerie'>
						<rules-author-comment></rules-author-comment>
						<init>
							<registers>
								<register index='power' value='1'/>
								<register index='toughness' value='1'/>
							</registers>
							<colors>black</colors>
							<idcards>creature</idcards>
							<properties>token faerie rogue flying </properties>
						</init>
					</card>
				</create-card>
				<move-card controller='you' destination='play'/>
				<action ref='finish-spell'/>
			</effects>
		</activated-ability>
	</abilities>
</card>
