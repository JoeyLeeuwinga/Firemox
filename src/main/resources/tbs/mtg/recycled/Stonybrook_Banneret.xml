<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Stonybrook Banneret">
<rules-author-comment>riclas</rules-author-comment>

<!--
		1u
	creature - merfolk wizard
	1/1
	islandwalk
	merfolk spells and wizard spells you play cost 1 less to play.
 -->

	<init>
		<registers>
			<register index='blue' value='1'/>
			<register index='colorless' value='1'/>
			<register index='power' value='1'/>
			<register index='toughness' value='1'/>
		</registers>
		<colors>blue </colors>
		<idcards>creature </idcards>
		<properties>merfolk wizard islandwalk </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
	</abilities>
	<modifiers>
		<additional-cost-modifier linked='true'>
			<test>
				<and>
					<controller player="you"/>
					<or>
						<has-property property="merfolk"/>
						<has-property property="wizard"/>
					</or>
				</and>
			</test>
			<cost>
				<pay-mana colorless='-1' />
			</cost>
		</additional-cost-modifier>
	</modifiers>
</card>
