<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Gilt-Leaf Seer">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2g
	creature - elf shaman
	2/2
	g, t :look at the top two cards of your library, then put them back in any order.
 -->

	<init>
		<registers>
			<register index='green' value='1'/>
			<register index='colorless' value='2'/>
			<register index='power' value='2'/>
			<register index='toughness' value='2'/>
		</registers>
		<colors>green </colors>
		<idcards>creature </idcards>
		<properties>elf shaman </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana green='1' />
				<action ref='T'/>
			</cost>
			<effects>
				<target type="card" mode="all" restriction-zone="library">
					<test>
						<and>
							<controller player="you" />
							<position max="1"/>
						</and>
					</test>
				</target>
				<move-card destination="library" position="top" controller="you"/>
			</effects>
		</activated-ability>
	</abilities>
</card>
