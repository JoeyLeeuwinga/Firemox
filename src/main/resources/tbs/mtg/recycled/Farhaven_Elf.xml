<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Farhaven Elf">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2g
	creature - elf druid
	1/1
	when farhaven elf comes into play, you may search your library for a basic land card and put it into play tapped. if you do, shuffle your library.
 -->

	<init>
		<registers>
			<register index='green' value='1'/>
			<register index='colorless' value='2'/>
			<register index='power' value='1'/>
			<register index='toughness' value='1'/>
		</registers>
		<colors>green </colors>
		<idcards>creature </idcards>
		<properties>elf druid </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<not>
							<in-zone zone='play' card='tested'/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='play' card='tested'/>
				</destination-test>
			</moved-card>
			<effects>
				<choice controller="you" cancel="true">
					<either>
						<action ref="search-lib">
							<test ref="is-basic-land"/>
						</action>
						<move-card controller="you" destination="playANDtapped"/>
					</either>
				</choice>
			</effects>
		</triggered-ability>
	</abilities>
</card>
