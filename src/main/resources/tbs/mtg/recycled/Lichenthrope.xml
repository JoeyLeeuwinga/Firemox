<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Lichenthrope">
<rules-author-comment>riclas</rules-author-comment>

<!--
		3gg
	creature - plant fungus
	5/5
	if damage would be dealt to lichenthrope, put that many -1/-1 counters on it instead.
	at the beginning of your upkeep, remove a -1/-1 counter from lichenthrope.
 -->

	<init>
		<registers>
			<register index='green' value='2'/>
			<register index='colorless' value='3'/>
			<register index='power' value='5'/>
			<register index='toughness' value='5'/>
		</registers>
		<colors>green </colors>
		<idcards>creature </idcards>
		<properties>plant fungus </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<replacement-ability zone="play">
			<assigned-damage type="damage-any">
				<destination-test>
					<is-this/>
				</destination-test>
			</assigned-damage>
			<effects>
				<target type="this"/>
				<repeat value="context.int"/>
				<add-object object-name="-1/-1"/>
			</effects>
		</replacement-ability>
		<triggered-ability resolution='normal' zone='play'>
			<beginning-of-phase phase='upkeep'>
				<test ref='during-your-upkeep'/>
			</beginning-of-phase>
			<effects>
				<target type="this"/>
				<remove-object object-name="-1/-1"/>
			</effects>
		</triggered-ability>
	</abilities>
</card>
