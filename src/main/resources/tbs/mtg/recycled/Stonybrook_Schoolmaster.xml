<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Stonybrook Schoolmaster">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2w
	creature - merfolk wizard
	1/2
	whenever stonybrook schoolmaster becomes tapped, you may put a 1/1 blue merfolk wizard creature token into play.
 -->

	<init>
		<registers>
			<register index='white' value='1'/>
			<register index='colorless' value='2'/>
			<register index='power' value='1'/>
			<register index='toughness' value='2'/>
		</registers>
		<colors>white </colors>
		<idcards>creature </idcards>
		<properties>merfolk wizard </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<become-tapped>
				<test>
					<is-this card='tested'/>
				</test>
			</become-tapped>
			<effects>
				<choice controller="you" cancel="true">
					<either>
						<create-card>
							<card name='Merfolk'>
								<rules-author-comment></rules-author-comment>
								<init>
									<registers>
										<register index='power' value='1'/>
										<register index='toughness' value='1'/>
									</registers>
									<colors>blue</colors>
									<idcards>creature</idcards>
									<properties>token merfolk wizard</properties>
								</init>
							</card>
						</create-card>
						<move-card controller='you' destination='play'/>
					</either>
				</choice>
			</effects>
		</triggered-ability>
	</abilities>
</card>
