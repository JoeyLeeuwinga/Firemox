<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Infernal Medusa">
<rules-author-comment>riclas</rules-author-comment>

<!--
		3bb
	creature - gorgon
	2/4
	whenever infernal medusa blocks or becomes blocked by a non-wall creature, destroy that creature at end of combat.
 -->

	<init>
		<registers>
			<register index='black' value='2'/>
			<register index='colorless' value='3'/>
			<register index='power' value='2'/>
			<register index='toughness' value='4'/>
		</registers>
		<colors>black </colors>
		<idcards>creature </idcards>
		<properties>gorgon </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<declared-blocking>
				<attacking-test>
					<not>
						<has-property property="wall"/>
					</not>
				</attacking-test>
				<blocking-test>
					<is-this/>
				</blocking-test>
			</declared-blocking>
			<effects>
				<target type="context.card"/>
				<action ref='destroy-target-eoc'/>
			</effects>
		</triggered-ability>
		<triggered-ability zone='play'>
			<declared-blocking>
				<attacking-test>
					<is-this/>
				</attacking-test>
				<blocking-test>
					<not>
						<has-property property="wall"/>
					</not>
				</blocking-test>
			</declared-blocking>
			<effects>
				<target type="context.card"/>
				<action ref='destroy-target-eoc'/>
			</effects>
		</triggered-ability>
	</abilities>
</card>
