<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Merrow Levitator">
<rules-author-comment>riclas</rules-author-comment>

<!--
		3u
	creature - merfolk wizard
	2/3
	t :target creature gains flying until end of turn.
	whenever you play a blue spell, you may untap merrow levitator.
 -->

	<init>
		<registers>
			<register index='blue' value='1'/>
			<register index='colorless' value='3'/>
			<register index='power' value='2'/>
			<register index='toughness' value='3'/>
		</registers>
		<colors>blue </colors>
		<idcards>creature </idcards>
		<properties>merfolk wizard </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<action ref='T'/>
				<action ref='target-creature'/>
			</cost>
			<effects>
				<action ref="flying-until-eot"/>
			</effects>
		</activated-ability>
		<triggered-ability zone='play'>
			<casting>
				<test>
					<and>
						<controller player="you"/>
						<has-color color="blue"/>
					</and>
				</test>
			</casting>
			<effects>
				<choice controller="you" cancel="true">
					<either>
						<target type='this'/>
						<untap/>
					</either>
				</choice>
			</effects>
		</triggered-ability>
	</abilities>
</card>
